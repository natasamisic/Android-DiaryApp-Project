<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner">

    <TextView
        android:id="@+id/titleoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My title"
        android:textColor="@color/item_view_title_textcolor"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleoutput"
        android:maxLines="2"
        android:text="My text"
        android:textColor="@color/item_view_text_textcolor"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/timeoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoutput"
        android:gravity="end"
        android:text="Jan 21 2022"
        android:textColor="@color/item_view_time_textcolor"
        android:textSize="15dp" />

</RelativeLayout>